generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Goal {
  id       String    @id @default(cuid())
  text     String
  checked  Boolean   @default(false)
  weekKey  String
  order    Int       @default(0)
  subs     SubItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([weekKey])
}

model SubItem {
  id       String    @id @default(cuid())
  text     String
  type     String    @default("checkbox") // "checkbox" | "list"
  checked  Boolean   @default(false)
  order    Int       @default(0)

  goal     Goal?     @relation(fields: [goalId], references: [id], onDelete: Cascade)
  goalId   String?

  parent   SubItem?  @relation("SubItemTree", fields: [parentId], references: [id], onDelete: Cascade)
  parentId String?
  children SubItem[] @relation("SubItemTree")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([goalId])
  @@index([parentId])
}
